# grab the command line arguments
# -------------------------------
COM=$@ 

# now feed rabbitmqadmin with all the "required" variables ...
# ------------------------------------------------------------
/usr/local/bin/rabbitmqadmin --host=<%= @rabbit_address %> --port=<%= @ssl_management_port %> --vhost=<%= @default_vhost %> --username=<%= @default_user %> --password=<%= @default_pass %> --ssl --ssl-key-file=<%= @ssl_ckey %> --ssl-cert-file=<%= @ssl_ccert %> --ssl-ca-cert-file=<%= @ssl_cacert_file %> $COM
